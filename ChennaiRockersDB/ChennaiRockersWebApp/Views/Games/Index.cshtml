@model IEnumerable<ChennaiRockersWebApp.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>List of Upcoming Games</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courtFees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamMember.MemberName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.GameDateTime > DateTime.Now)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GameDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courtFees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamMember.MemberName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GameId }) |
            @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GameId })
        </td>
    </tr>
    }
}

</table>
